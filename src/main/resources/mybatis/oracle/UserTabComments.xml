<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="UserTabComments">

	<resultMap id="BaseResMap" type="UserTabComments">
		<result column="TABLE_NAME" property="tableName" jdbcType="VARCHAR" />
		<result column="TABLE_TYPE" property="tableType" jdbcType="VARCHAR" />
		<result column="COMMENTS" property="comments" jdbcType="VARCHAR" />
	</resultMap>

	<select id="queryUserTabComments" parameterType="string"
		resultMap="BaseResMap">
		SELECT * FROM USER_TAB_COMMENTS WHERE TABLE_NAME = #{tableName}
	</select>
</mapper>